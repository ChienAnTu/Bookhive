# JWT settings (required; ensure these are already present)
SECRET_KEY=your-super-secure-random-key-here-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (optional, comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for notifications via fastapi-mail; Gmail SMTP example)
MAIL_USERNAME=<YOUR_ACTUAL_GMAIL>                       # Gmail address for sending (e.g., do-not-reply@bookhive.com)
MAIL_PASSWORD=<YOUR_GMAIL_APP_PASSWORD>                 # 16-character Gmail app password (generate after enabling 2-Step Verification)
MAIL_FROM=<YOUR_ACTUAL_GMAIL>                           # Sender email (usually same as MAIL_USERNAME or a verified alias)
MAIL_PORT=587                                           # SMTP port (587 for TLS)
MAIL_SERVER=smtp.gmail.com                              # SMTP server (e.g., smtp.gmail.com)
MAIL_STARTTLS=True                                      # Use STARTTLS (True for secure connection)
MAIL_SSL_TLS=False                                      # Use SSL/TLS (False if using STARTTLS)
USE_CREDENTIALS=True                                    # Use credentials for auth
VALIDATE_CERTS=True      